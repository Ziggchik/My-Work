<Window x:Class="WeaponStore.SMG"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeaponStore"
        mc:Ignorable="d"
       Title="Пистолеты-пулемёты"  Height="800" Width="1200" Icon="iconka.ico" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="SMG.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Button x:Name="btProwler" Content="Купить" HorizontalAlignment="Left" Margin="122,602,0,0" VerticalAlignment="Top" Width="185" Height="50" FontSize="36" FontWeight="Bold" Click="BtProwler_Click" />
        <Button x:Name="btR_99" Content="Купить" HorizontalAlignment="Left" Margin="519,602,0,0" VerticalAlignment="Top" Width="185" Height="50" FontSize="36" FontWeight="Bold" Click="BtR_99_Click" />
        <Button x:Name="btAlternator" Content="Купить" HorizontalAlignment="Left" Margin="919,602,0,0" VerticalAlignment="Top" Width="185" Height="50" FontSize="36" FontWeight="Bold" Click="BtAlternator_Click" />
    </Grid>
</Window>
