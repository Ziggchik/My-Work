<Window x:Class="WeaponStore.LMG"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeaponStore"
        mc:Ignorable="d"
        Title="Ручные пулемёты"  Height="800" Width="1200" Icon="iconka.ico" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="LMG.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Button x:Name="btDevotion" Content="Купить" HorizontalAlignment="Left" Margin="201,501,0,0" VerticalAlignment="Top" Width="185" Height="50" FontSize="36" FontWeight="Bold" Click="BtDevotion_Click" />
        <Button x:Name="btSpitfire" Content="Купить" HorizontalAlignment="Left" Margin="852,510,0,0" VerticalAlignment="Top" Width="185" Height="50" FontSize="36" FontWeight="Bold" Click="BtSpitfire_Click" />
        <Button x:Name="btL_Star" Content="Купить" HorizontalAlignment="Left" Margin="513,694,0,0" VerticalAlignment="Top" Width="185" Height="50" FontSize="36" FontWeight="Bold" Click="BtL_Star_Click" />

    </Grid>
</Window>
