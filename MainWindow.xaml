<Window x:Class="WeaponStore.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeaponStore"
        mc:Ignorable="d"
        Title="Меню" Height="800" Width="1200" Icon="iconka.ico" Activated="Window_Activated" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="MainWindow1.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Button Content="Каталог" HorizontalAlignment="Left" Margin="10,213,0,0" VerticalAlignment="Top" Width="185" Height="50" FontSize="36" FontWeight="Bold" Click="Button_Click"/>
        <Button Content="Контакты" HorizontalAlignment="Left" Margin="310,213,0,0" VerticalAlignment="Top" Width="185" Height="50" FontSize="36" FontWeight="Bold" Click="Button_Click_1"/>
        <Button x:Name="btAdmin" Content="Администратору" HorizontalAlignment="Left" Margin="600,213,0,0" VerticalAlignment="Top" Width="311" Height="50" FontSize="36" FontWeight="Bold" Click="Button_Click_2"/>
        <Button Content="Вакансии" HorizontalAlignment="Left" Margin="962,213,0,0" VerticalAlignment="Top" Width="185" Height="50" FontSize="36" FontWeight="Bold" Click="Button_Click_3"/>
    </Grid>
</Window>

